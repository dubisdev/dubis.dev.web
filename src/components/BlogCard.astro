---
import { Image } from "astro:assets";
import FormattedDate from "./FormattedDate.astro";
import type { ImageMetadata } from "astro";

interface Props {
    title: string;
    pubDate: Date;
    heroImage?: ImageMetadata;
    href: string;
    featured?: boolean;
}

const { title, pubDate, heroImage, href, featured = false } = Astro.props;
---

<li class:list={[{ featured }]}>
    <a href={href}>
        {heroImage && <Image width={720} height={360} src={heroImage} alt="" />}
        <h4 class="title">{title}</h4>
        <p class="date">
            <FormattedDate date={pubDate} />
        </p>
    </a>
</li>

<style>
    li * {
        text-decoration: none;
        transition: 0.2s ease;
    }
    li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
    }
    li a {
        display: block;
    }
    .title {
        margin: 0;
        color: #fff;
        line-height: 1;
    }
    .date {
        margin: 0;
        color: rgb(var(--gray));
    }
    li a:hover h4,
    li a:hover .date {
        color: rgb(var(--accent), 50%);
    }
    li a:hover img {
        box-shadow: var(--box-shadow);
    }
    li.featured .title {
        font-size: 2.369rem;
    }
    li.featured img {
        width: 100%;
    }
</style>
